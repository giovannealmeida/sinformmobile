<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColor">@color/dark_primary_custom</item>
    </style>

    <style name="ToolbarBlueStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/actionbar_text</item>
        <item name="android:background">@color/primary_custom</item>
    </style>

    <style name="titleBoxGray">
        <item name="android:padding">8dp</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="contentBoxWhite">
        <item name="android:textSize">20sp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--Estilo de títulos em itens de curso-->
    <style name="itemTitleCustom">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_primary_custom</item>
    </style>

    <!--Estilo para os emptyTextView-->
    <style name="emptyTextView">
        <item name="android:visibility">gone</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:text">@string/empty_text_message</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="titleBoxCustom">
        <item name="android:padding">3dp</item>
        <item name="android:background">@color/primary_custom</item>
    </style>

    <!--Layout para os destaques das páginas e títulos-->
    <style name="mainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/primary_custom</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>
