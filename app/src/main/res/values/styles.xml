<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ToolbarBlueStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/actionbar_text</item>
        <item name="android:background">@color/primary_custom</item>
    </style>

    <style name="titleTextCourse" parent="titleBoxCourse">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="titleTextNivel2Course" parent="titleBoxCourse">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="titleTextGuest" parent="titleBoxGuest">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="titleTextNivel2Guest" parent="titleBoxGuest">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="titleTextLecture" parent="titleBoxLecture">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="titleTextNivel2Lecture" parent="titleBoxLecture">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="titleBoxGuest">
        <!--style="@style/itemTextNivel2"-->
        <item name="android:padding">3dp</item>
        <item name="android:background">@color/primary_guest</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="titleBoxCourse">
        <item name="android:padding">3dp</item>
        <item name="android:background">@color/primary_course</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="titleBoxLecture">
        <item name="android:padding">3dp</item>
        <item name="android:background">@color/primary_lecture</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="contentBoxWhite">
        <item name="android:background">@android:color/white</item>
        <item name="android:elevation">1dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!--Estilo de link para conteúdos de guests-->
    <style name="linkTextNivel2Guest" parent="contentTextNivel2">
        <item name="android:textColor">@color/acent_primary_guest</item>
    </style>

    <!--Estilo de link para conteúdos de courses-->
    <style name="linkTextNivel2Course" parent="contentTextNivel2">
        <item name="android:textColor">@color/acent_primary_course</item>
    </style>

    <!--Estilo de link para conteúdos de lectures-->
    <style name="linkTextNivel2Lecture" parent="contentTextNivel2">
        <item name="android:textColor">@color/acent_primary_lecture</item>
    </style>

    <!--Estilo de texto para conteúdos de nível 2 de listas-->
    <style name="contentTextNivel2">
        <item name="android:textSize">20sp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <!--Estilo de título para itens de course-->
    <style name="itemTitleTextCourse" parent="titleBoxCourse">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Estilo de título para itens de guest-->
    <style name="itemTitleTextGuest" parent="titleBoxGuest">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Estilo de título para itens de lecture-->
    <style name="itemTitleTextLecture" parent="titleBoxLecture">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Estilo de texto para itens de nível 1 de listas-->
    <style name="itemText">
        <item name="android:textSize">25sp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <!--Estilo de texto para itens de nível 2 de listas-->
    <style name="itemTextNivel2">
        <item name="android:textSize">20sp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <!--Estilo de texto para itens de nível 3 de listas-->
    <style name="itemTextNivel3">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <!--Layout para itens de listas-->
    <style name="itemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#CCCCCC</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--Layout para os destaques das páginas e títulos-->
    <style name="mainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:elevation">10dp</item>
    </style>

    <!--Estilo para os emptyTextView-->
    <style name="emptyTextView">
        <item name="android:visibility">gone</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/acent_custom</item>
        <item name="android:text">@string/empty_text_message</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
