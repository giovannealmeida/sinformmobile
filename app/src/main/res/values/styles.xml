<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:background">@android:color/darker_gray</item>-->
    </style>

    <style name="titleText">
        <item name="android:textSize">40sp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <!--Estilo de texto para itens de nível 1 de listas-->
    <style name="itemText">
        <item name="android:textSize">25sp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <!--Estilo de texto para itens de nível 2 de listas-->
    <style name="itemTextNivel2">
        <item name="android:textSize">20sp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <!--Estilo de texto para itens de nível 3 de listas-->
    <style name="itemTextNivel3">
        <item name="android:textSize">16sp</item>
        <item name="android:color">@android:color/black</item>
    </style>

    <!--Layout para itens de listas-->
    <style name="itemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#CCCCCC</item>
        <item name="android:padding">5dp</item>
    </style>

    <!--Layout para os destaques das páginas e títulos-->
    <style name="mainLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">5dp</item>
        <item name="android:elevation">10dp</item>
    </style>
</resources>
