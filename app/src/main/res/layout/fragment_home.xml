<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="@color/primary_custom">

    <LinearLayout
        android:id="@+id/titleLayout"
        style="@style/mainLayout">

        <!--<TextView-->
        <!--android:id="@+id/edition"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--style="@style/titleText"-->
        <!--android:text="XV"/>-->

        <ImageView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:src="@drawable/logo" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/descriptionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/backgroundTransparentContent"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@android:color/transparent"/>
            <LinearLayout
                android:id="@+id/countDownLayout"
                android:layout_below="@id/backgroundTransparentContent"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/light_gray"
                android:paddingRight="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45">

                    <TextView
                        android:id="@+id/daysLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dias"
                        android:layout_alignParentRight="true"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvDays"
                        android:layout_below="@id/daysLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="30sp"
                        android:text="115" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <TextView
                        android:id="@+id/hoursLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Horas"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvHours"
                        android:layout_below="@id/hoursLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="30sp"
                        android:text="11" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <TextView
                        android:id="@+id/minutesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Minutos"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvMinutes"
                        android:layout_below="@id/minutesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="30sp"
                        android:text="58" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4">

                    <TextView
                        android:id="@+id/secondsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="Segundos"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvSeconds"
                        android:layout_below="@id/secondsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textSize="30sp"
                        android:text="20" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:id="@+id/tvDescription"
                android:layout_below="@id/countDownLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="@string/lorem"
                android:background="@android:color/white"/>

            <TextView
                android:layout_below="@id/countDownLayout"
                android:id="@+id/tvEmptyText"
                style="@style/emptyTextView" />
        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />
</RelativeLayout>